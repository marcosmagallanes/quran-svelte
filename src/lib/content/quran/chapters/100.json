{
    "id": 100,
    "name": "العاديات",
    "transliteration": "Al-'Adiyat",
    "translation": "The Courser",
    "type": "meccan",
    "total_verses": 11,
    "verses": {
        "1": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ وَٱلْعَـٰدِيَـٰتِ ضَبْحًا",
        "2": "فَٱلْمُورِيَـٰتِ قَدْحًا",
        "3": "فَٱلْمُغِيرَٰتِ صُبْحًا",
        "4": "فَأَثَرْنَ بِهِۦ نَقْعًا",
        "5": "فَوَسَطْنَ بِهِۦ جَمْعًا",
        "6": "إِنَّ ٱلْإِنسَـٰنَ لِرَبِّهِۦ لَكَنُودٌ",
        "7": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٌ",
        "8": "وَإِنَّهُۥ لِحُبِّ ٱلْخَيْرِ لَشَدِيدٌ",
        "9": "۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِى ٱلْقُبُورِ",
        "10": "وَحُصِّلَ مَا فِى ٱلصُّدُورِ",
        "11": "إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٍ لَّخَبِيرٌۢ"
    }
}