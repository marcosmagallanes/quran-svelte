{
    "id": 104,
    "name": "الهمزة",
    "transliteration": "Al-Humazah",
    "translation": "The Traducer",
    "type": "meccan",
    "total_verses": 9,
    "verses": {
        "1": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
        "2": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ",
        "3": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ",
        "4": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ",
        "5": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ",
        "6": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ",
        "7": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ",
        "8": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
        "9": "فِى عَمَدٍ مُّمَدَّدَةٍۭ"
    }
}