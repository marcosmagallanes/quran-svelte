{
    "id": 107,
    "name": "الماعون",
    "transliteration": "Al-Ma'un",
    "translation": "The Small kindnesses",
    "type": "meccan",
    "total_verses": 7,
    "verses": {
        "1": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ أَرَءَيْتَ ٱلَّذِى يُكَذِّبُ بِٱلدِّينِ",
        "2": "فَذَٰلِكَ ٱلَّذِى يَدُعُّ ٱلْيَتِيمَ",
        "3": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ",
        "4": "فَوَيْلٌ لِّلْمُصَلِّينَ",
        "5": "ٱلَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ",
        "6": "ٱلَّذِينَ هُمْ يُرَآءُونَ",
        "7": "وَيَمْنَعُونَ ٱلْمَاعُونَ"
    }
}