{
    "id": 103,
    "name": "العصر",
    "transliteration": "Al-'Asr",
    "translation": "The Declining Day",
    "type": "meccan",
    "total_verses": 3,
    "verses": {
        "1": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ وَٱلْعَصْرِ",
        "2": "إِنَّ ٱلْإِنسَـٰنَ لَفِى خُسْرٍ",
        "3": "إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ وَتَوَاصَوْا۟ بِٱلْحَقِّ وَتَوَاصَوْا۟ بِٱلصَّبْرِ"
    }
}