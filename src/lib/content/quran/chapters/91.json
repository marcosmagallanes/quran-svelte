{
    "id": 91,
    "name": "الشمس",
    "transliteration": "Ash-Shams",
    "translation": "The Sun",
    "type": "meccan",
    "total_verses": 15,
    "verses": {
        "1": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ وَٱلشَّمْسِ وَضُحَىٰهَا",
        "2": "وَٱلْقَمَرِ إِذَا تَلَىٰهَا",
        "3": "وَٱلنَّهَارِ إِذَا جَلَّىٰهَا",
        "4": "وَٱلَّيْلِ إِذَا يَغْشَىٰهَا",
        "5": "وَٱلسَّمَآءِ وَمَا بَنَىٰهَا",
        "6": "وَٱلْأَرْضِ وَمَا طَحَىٰهَا",
        "7": "وَنَفْسٍ وَمَا سَوَّىٰهَا",
        "8": "فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَىٰهَا",
        "9": "قَدْ أَفْلَحَ مَن زَكَّىٰهَا",
        "10": "وَقَدْ خَابَ مَن دَسَّىٰهَا",
        "11": "كَذَّبَتْ ثَمُودُ بِطَغْوَىٰهَآ",
        "12": "إِذِ ٱنۢبَعَثَ أَشْقَىٰهَا",
        "13": "فَقَالَ لَهُمْ رَسُولُ ٱللَّهِ نَاقَةَ ٱللَّهِ وَسُقْيَـٰهَا",
        "14": "فَكَذَّبُوهُ فَعَقَرُوهَا فَدَمْدَمَ عَلَيْهِمْ رَبُّهُم بِذَنۢبِهِمْ فَسَوَّىٰهَا",
        "15": "وَلَا يَخَافُ عُقْبَـٰهَا"
    }
}